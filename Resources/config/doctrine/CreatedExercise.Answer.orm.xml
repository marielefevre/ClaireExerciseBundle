<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SimpleIT\ClaireExerciseBundle\Entity\CreatedExercise\Answer" table="claire_exercise_answer" repository-class="SimpleIT\ClaireExerciseBundle\Repository\Exercise\CreatedExercise\AnswerRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="content" column="content" type="text" nullable="false"/>
        <field name="mark" column="mark" type="float" nullable="true"/>

        <many-to-one target-entity="SimpleIT\ClaireExerciseBundle\Entity\CreatedExercise\Item" field="item">
            <join-column name="item_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>

        <many-to-one target-entity="SimpleIT\ClaireExerciseBundle\Entity\CreatedExercise\Attempt" field="attempt" inversed-by="answers">
            <join-column name="attempt_id" referenced-column-name="id" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
