<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SimpleIT\ClaireExerciseBundle\Entity\Test\TestModel" table="claire_exercise_test_model" repository-class="SimpleIT\ClaireExerciseBundle\Repository\Exercise\Test\TestModelRepository">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="title" column="title" type="string" nullable="false"/>

        <one-to-many target-entity="SimpleIT\ClaireExerciseBundle\Entity\Test\TestModelPosition" mapped-by="testModel" field="testModelPositions">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-many target-entity="SimpleIT\ClaireExerciseBundle\Entity\Test\Test" mapped-by="testModel" field="tests">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <many-to-one target-entity="Claroline\CoreBundle\Entity\User" field="author">
            <join-column name="author_id" referenced-column-name="id"/>
        </many-to-one>

    </entity>
</doctrine-mapping>
